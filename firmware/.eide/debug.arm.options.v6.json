{
    "version": 3,
    "beforeBuildTasks": [
        {
            "name": "Pack Resources",
            "disable": false,
            "abortAfterFailed": false,
            "stopBuildAfterFailed": true,
            "command": "python src\\third\\rucfs\\tools\\mkfs.rucfs.py embed/ ${OutDir}/rucfs.img && python tools\\hexembed.py ${OutDir}/rucfs.img ${OutDir}/rucfs.img.h"
        },
        {
            "name": "Build TAG",
            "disable": false,
            "abortAfterFailed": false,
            "stopBuildAfterFailed": true,
            "command": "python tools\\taggen.py 1.0.0 devbuild ${OutDir}/githash.h"
        }
    ],
    "afterBuildTasks": [],
    "global": {
        "use-microLIB": true,
        "output-debug-info": "enable"
    },
    "c/cpp-compiler": {
        "optimization": "level-3",
        "language-c": "c11",
        "language-cpp": "c++14",
        "link-time-optimization": true,
        "warnings": "ac5-like-warnings"
    },
    "asm-compiler": {
        "$use": "asm-auto"
    },
    "linker": {
        "output-format": "elf",
        "misc-controls": "--diag_suppress=L6329"
    }
}